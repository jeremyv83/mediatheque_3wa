{% extends 'admin/base.html.twig' %}

{% block title %}Consulter un document | Administration MediaTehk{% endblock %}

{% block body %}
<nav class="panel">
    <p class="panel-heading">Informations du document</p>

    <table class="table is-fullwidth">
        <tbody>
            <tr>
                <th>Identifiant unique</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ document.quantity }}</td>
            </tr>
            <tr>
                <th>Physique</th>
                <td>{{ document.physique ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Fragile</th>
                <td>{{ document.fragile ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ document.date ? document.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('document/_delete_form.html.twig') }}
</nav>
{% endblock %}

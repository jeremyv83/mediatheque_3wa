{% extends 'base.html.twig' %}

{% block title %}S'inscrire | MediaTehk {% endblock %}

{% block body %}
    <div class="hero is-fullheight has-background-success-light">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-5 is-offset-3">
                    <div class="box">
                        <img src="{{ asset('build/images/logo.png') }}">
                        <hr class="login-hr">
                        <p class="subtitle has-text-black">Inscrivez-vous pour accéder à la médiathèque.</p>

                        <div class="box">
                            <div class="title has-text-grey is-6">Saisissez votre nom, votre adresse email et votre mot de passe.</div>
                            <form>
                                <div class="field">
                                    <div class="control">
                                        <input class="input is-medium" type="text" placeholder="John Doe" autofocus="">
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <input class="input is-medium" type="email" placeholder="john.doe@gmail.com" autofocus="">
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <input class="input is-medium" type="password" placeholder="********">
                                    </div>
                                </div>
                                <button class="button is-block is-black is-medium is-fullwidth">Inscription</button>
                            </form>
                        </div>
                        <a href="/login" class="has-text-black">Connexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

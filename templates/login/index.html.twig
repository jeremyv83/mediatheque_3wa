{% extends 'base.html.twig' %}

{% block title %}Se connecter | MediaTehk {% endblock %}

{% block body %}
    <div class="hero is-fullheight has-background-primary-light">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-5 is-offset-3">
                    <div class="box">
                        <img src="{{ asset('build/images/logo.png') }}" alt="logo">
                        <hr class="login-hr">
                        <p class="subtitle has-text-black">Connectez-vous pour accéder à la médiathèque.</p>

                        <div class="box">
                            <div class="title has-text-grey is-6">Saisissez votre adresse email et votre mot de passe.
                            </div>
                            <form action="{{ path('app_login') }}" method="post">
                                <div class="field">
                                    <div class="control">
                                        <label>
                                            <input class="input is-medium" type="email" name="_username"
                                                   placeholder="john.doe@gmail.com"
                                                   autofocus="" value="{{ last_username }}">
                                        </label>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <label>
                                            <input class="input is-medium" type="password" placeholder="********"
                                                   name="_password">
                                        </label>
                                    </div>
                                </div>
                                <button class="button is-block is-black is-medium is-fullwidth">Connexion</button>
                                {% if error %}
                                    <div class="notification is-danger is-light p-2 mb-0 mt-3 is-small ml-auto mr-auto">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                            </form>
                        </div>
                        <a href="{{ path('register') }}" class="has-text-black">Inscription</a> &nbsp;·&nbsp;
                        <a href="#" class="has-text-black">Mot de passe oublié</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
